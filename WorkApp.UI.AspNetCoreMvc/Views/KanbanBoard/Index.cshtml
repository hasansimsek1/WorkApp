@model IEnumerable<KanbanBoardDto>;

@{
    ViewBag.PageTitle = "Kanban Board List";
}

<div class="kanbanwrapper">
    <div class="kanbantop">
        <aside>
            <h4 class="titlelist">Kanban Boards</h4>
        </aside>
        <aside>
            <a asp-action="Add" asp-controller="KanbanBoard" class="addbtn">
                New Kanban Board
            </a>
        </aside>
    </div>
    <div class="kanbansecwrapper">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <a asp-action="Board" asp-controller="KanbanBoard" asp-route-id="@item.Id" class="horizontallist">
                    <aside class="listitem">
                        <p class="notecontenttext date">@item.Name</p>
                    </aside>
                    @*<aside class="listitem">
                        <p class="noticerikyazisi">Number of Columns : <b>@item.NumberOfColumns</b></p>
                    </aside>
                    <aside class="listitem">
                        <p class="notkategoriyazisi">Number of Cards: <b>@item.NumberOfCards</b></p>
                    </aside>*@
                    @*<aside class="listitem">
                        <p class="notkategoriyazisi">Aktif Sayısı: <b>2</b></p>
                    </aside>
                    <aside class="listitem">
                        <p class="notkategoriyazisi">Kalan Sayısı: <b>3</b></p>
                    </aside>*@
                </a>
            }
        }
        else
        {
            <a href="#" class="horizontallist">
                <aside class="listitem">
                    <p class="notecontenttext date">There is no kanban board yet..</p>
                </aside>
            </a>
        }

    </div>

</div>

